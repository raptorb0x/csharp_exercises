#include<math.h>
#include<graphics.h>
main()
{
void *buf;
float t=0;
int gr1=0, gr2, mx, my;
initgraph(&gr1, &gr2, "");
mx=getmaxx()/2;
my=getmaxy()/2;
do
{
line(mx, my, mx-100*sin(t), my-100*cos(t));
line(mx-100*sin(t), my-100*cos(t),mx+100*sqrt(2)*cos(M_PI/4+t),my-100*sqrt(2)*sin(M_PI/4+t));
line(mx+100*sqrt(2)*cos(M_PI/4+t), my-100*sqrt(2)*sin(M_PI/4+t), mx+100*cos(t), my-100*sin(t));
Line(mx+100*cos(t), my-100*sin(t), mx, my);
delay(10000);
t+=0.1;
deardevice();
}
while(t);
}
