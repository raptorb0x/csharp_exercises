<UserControl x:Class="Programm.Views.Out_Shtat_Rasp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <ListView IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding Path=Data}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Наименование структурных подразделений" DisplayMemberBinding="{Binding Path=Podr_Name}"/>
                    <GridViewColumn Header="Должность" DisplayMemberBinding="{Binding Path=Dolj_Name}"/>
                    <GridViewColumn Header="Кол-во штатных единиц по плану" DisplayMemberBinding="{Binding Path=Plan_Kolvo}"/>
                    <GridViewColumn Header="Соотношение должностного оклада" DisplayMemberBinding="{Binding Path=Oklad}"/>
                    <GridViewColumn Header="Надбавки" DisplayMemberBinding="{Binding Path=Nadbavki}"/>
                    <GridViewColumn Header="Прочие выплаты" DisplayMemberBinding="{Binding Path=Pr_Vyplaty}"/>
                    <GridViewColumn Header="Месячный фонд з. п." DisplayMemberBinding="{Binding Path=Fond}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
