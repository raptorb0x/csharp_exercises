            <Button x:Name="bInverse" Content="1/x" HorizontalAlignment="Left" Margin="67,69,0,0" VerticalAlignment="Top" Width="45" Height="45" FontSize="24" FontFamily="Segoe UI Semibold" FontWeight="Bold" Click="bRev_Click"/>
