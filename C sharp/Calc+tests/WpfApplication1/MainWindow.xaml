            <Button x:Name="bDiv" Content="/" HorizontalAlignment="Left" Margin="10,246,0,0" VerticalAlignment="Top" Width="45" Height="45" FontSize="24" FontFamily="Segoe UI Semibold" FontWeight="Bold" Click="bOper_Click"/>
